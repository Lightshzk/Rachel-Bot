  "version": "1.0.0",
  "description": "🌟 Rachel Bot - WhatsApp bot temático de Tower of God. 'Eu só quero ver as estrelas...'",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Rachel está testando a Torre...\" && exit 0",
    "install-deps": "npm install",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/$(date +%Y-%m-%d).log",
    "setup": "mkdir -p sessions logs media temp && echo '🌟 Diretórios da Torre criados!'",
    "rachel": "chmod +x start.sh && ./start.sh"
